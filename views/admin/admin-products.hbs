<section class="mt-5">
    <div class="container">
      <div class="row add-btn mb-5">
        <a href="/admin/add-product" class="btn btn-success   ">Add Product</a>
      </div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Details</th>
      <th scope="col">Image</th>

    </tr>
  </thead>
  {{#each products}}
  <tbody>
      
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img   style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.png" alt=""></td>
      <td style="" class=""><a  href="admin/edit-products?id={{this._id}}">
        <button  class="btn btn-primary">
            Edit
        </button>
      </a>
      <a href="admin/delete-product?id={{this._id}}" onclick="return confirm('Do you want to delete {{this.Name}}?')">
        <button style="margin-right: 35px;" class="btn btn-danger ">
            Delete
        </button>
        </td>  
      
    </tr>
    
  </tbody>
  {{/each}}
    
</table>
    </div>
</section>

