<section>
  <div class="container">
      
      <div class="row">
          <div class='col-md-6'>
              <h1 class="ml-auto text-center mt-3 mb-3">Edit Products </h1>
              <form action="/admin/edit-product/{{product._id}}" enctype="multipart/form-data" method="POST">
            <div class="form-group">
                <label class = 'mb-2'for="formGroupExampleInput">Name</label>
                <input type="text" class="form-control" name="Name" value="{{product.Name}}" id="formGroupExampleInput" >
            </div>
            <div class="form-group">
                <label class = 'mb-2' for="formGroupExampleInput2">Price</label>
                <input type="text" class="form-control" name="Price" value="{{product.Price}}" id="formGroupExampleInput2" >
            </div>
            <div class="form-group">
                <label class = 'mb-2' for="formGroupExampleInput2">Description</label>
                <input type="text" class="form-control" name="Description" value="{{product.Description}}" id="formGroupExampleInput2" >
            </div>
            <div class="form-group">
                <label class = 'mb-2' for="formGroupExampleInput2">Image</label>
                <img src="/product-images/{{product._id}}.png" class="pt-3 pb-3" style="object-fit:contain; width: 100px;" id="imgView" alt="">
                <input type="file" onchange="viewImg(event)" class="form-control" name="Image" id="formGroupExampleInput2" >
            </div>
            <button class="btn btn-success mt-3" type="submit ">Submit</button>
            </form>
          </div>
      </div>
  </div>
</section>

<script>
    function viewImg(event){
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>